<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.itheima.health.dao.PermissionDao">
    <!--根据roleId查询Permission-->
    <select id="findPermissionByRoleId" parameterType="int" resultType="permission">
        SELECT p.* FROM t_permission p,t_role_permission rp WHERE rp.permission_id = p.id AND rp.role_id = #{roleId}
    </select>
</mapper>